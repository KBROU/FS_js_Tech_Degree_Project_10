extends ../layout

block content
  h1 Patrons
  p
    a.button(href='/patrons/new/') Create New Patron
    .search
      form(action="/patrons/search/1", method="post") 
        include ../search
  table
    thead
      tr
        th Name 
        th Address
        th Email
        th Library ID
        th Zip
    tbody
    each patron in patronsLim
      tr
        td
          a(href='/patrons/' + patron.id)= patron.first_name + ' ' + patron.last_name
        td= patron.address 
        td= patron.email
        td= patron.library_id
        td= patron.zip_code
  .pagination
    ul
     - for (let i = 1; i <= pageCount; i++)
        li
          a(href='/patrons/index/' + i)= i      
